<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="IllnessHistory" table="illness_history">
    <indexes>
      <index name="illness_history_patient_id_idx" columns="id_patient"/>
    </indexes>
    <id name="idIllness" type="integer" column="id_illness">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="name" type="string" column="name" length="45" nullable="false">
      <options>
        <option name="fixed"/>
        <option name="default"/>
      </options>
    </field>
    <field name="description" type="string" column="description" length="1000" nullable="false">
      <options>
        <option name="fixed"/>
        <option name="default"/>
      </options>
    </field>
    <field name="dateTimeFound" type="datetime" column="date_time_found" nullable="false"/>
    <field name="dateTimeHealed" type="datetime" column="date_time_healed" nullable="true"/>
    <many-to-one field="idPatient" target-entity="Patient" fetch="LAZY">
      <join-columns>
        <join-column name="id_patient" referenced-column-name="id_person"/>
      </join-columns>
    </many-to-one>
  </entity>
</doctrine-mapping>
