<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="Patient" table="patient">
    <id name="idPerson" association-key="true"/>
    <field name="illness" type="string" column="illness" length="45" nullable="false">
      <options>
        <option name="fixed"/>
        <option name="default"/>
      </options>
    </field>
    <one-to-one field="idPerson" target-entity="Person" fetch="LAZY">
      <join-columns>
        <join-column name="id_person" referenced-column-name="id_person"/>
      </join-columns>
    </one-to-one>
  </entity>
</doctrine-mapping>
